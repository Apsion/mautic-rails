<!DOCTYPE html>
<html>
  <head>
    <title>Mautic</title>
    <%= stylesheet_link_tag "mautic/application", media: "all" %>
    <%= javascript_include_tag "mautic/application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% Array(flash).each do |type, message| %>
      <div class="alert <%= type %>">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>

  </body>
</html>
